<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	 <appender name="TEST_LOGGER" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d %-5p: -%t-%x-%-5c{1}-%-10M:%m%n"/>
		</layout>
	</appender> 
 
	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="TEST_LOGGER" />
	</root>
	
</log4j:configuration>